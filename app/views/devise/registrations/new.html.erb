<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">  
    <%= f.label :name, "ユーザ名" %>
    <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name", placeholder: "名前を入力してください。" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", autocomplete: "email", placeholder: "メールアドレスを入力してください。" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "登録したいパスワードを入力してください。" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "パスワードの確認" %>
  </div>
  <%= f.submit "Sign up", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
