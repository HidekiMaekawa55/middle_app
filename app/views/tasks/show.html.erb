<div class="task-detail">
  <h1>タスク<%= @task.id %></h1>
  <p><%= @task.title %></p>
  <p><%= @task.content %></p>
  <p>期限：<%= @task.deadline.to_s(:datetime_jp) %></p>
  <p>担当者：<%= @task.user.name %></p>
  <p>ステータス：<%= @task.status %></p>
  <%= link_to "一覧へ戻る", tasks_path, class: "btn btn-default" %>
  <% if current_user == @task.user%>
    <%= link_to "編集", edit_task_path(@task), class: "btn btn-info" %>
    <%= link_to "アサイン", edit_assignment_task_path, class: "btn btn-success" %>
  <% end %>
</div>