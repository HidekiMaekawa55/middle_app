<h1>アサイン</h1>

<%= form_with(url: update_assignment_task_url, method: :patch, local: true) do |f| %>
  <div class="assignment-container">
    <div class="current-assignment">
      <p>現在アサインされているユーザ</p>
      <p><%= @task.user.name %></p>
    </div>
    <div class="new-assignment">
      <p>新しくアサインするユーザ</p>
      <%= f.collection_select(:user_id, @users, :id, :name, {}, {class: "form-control"})%>
    </div>
  </div>
  <%= f.submit "アサインする", class: "btn btn-success" %>
<% end %>

<div class="task-detail">
  <h1>タスク<%= @task.id %></h1>
  <p><%= @task.title %></p>
  <p>期限：<%= @task.deadline.to_s(:datetime_jp) %></p>
  <p>ステータス：<%= @task.status %></p>
</div>

