<%= form_with(url: url, method: :get, local: true) do |f| %>

  <%= f.select "keyword", options_for_select( { 
                              投稿が新しい順: "created_at asc", 
                              投稿が古い順:   "created_at desc", 
                              期限が近い順:   "deadline asc",
                              期限が遠い順:   "deadline desc" }, params[:keyword] ) %>

  <%= f.check_box :status, { checked: params[:status].include?("未対応"), multiple: true}, "未対応", 0   %> 未対応
  <%= f.check_box :status, { checked: params[:status].include?("対応中"), multiple: true}, "対応中", nil %> 対応中
  <%= f.check_box :status, { checked: params[:status].include?("完了"),   multiple: true}, "完了"  , nil %> 完了

  <%= f.submit "並べ替え", class: "btn btn-warning search" %>
<% end %>